{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
