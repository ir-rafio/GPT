generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Student {
  id         Int        @id
  name       String
  tshirtSize String     @default("L")
  note       String     @default("")
  nicknames  Nickname[]
  votes      Vote[]
  comments   Comment[]
  nerd       Nerd[]
}

model Nickname {
  name     String
  sender   Int
  receiver Int
  student  Student @relation(fields: [receiver], references: [id])
  votes    Vote[]

  @@id([name, receiver])
}

model Vote {
  name      String
  voter     Int
  receiver  Int
  updatedAt DateTime @updatedAt
  nickname  Nickname @relation(fields: [name, receiver], references: [name, receiver])
  student   Student  @relation(fields: [voter], references: [id])

  @@id([voter, receiver])
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  sender    Int
  receiver  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [receiver], references: [id])
}

model Nerd {
  id      Int     @id
  student Student @relation(fields: [id], references: [id])
}
