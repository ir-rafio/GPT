generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id         Int         @id
  name       String
  oauthToken String
  tshirtSize String
  note       String
  nicknames  Nickname[]
  votes      Vote[]
  comments   Comment[]
  scientist  Scientist[]
}

model Nickname {
  name     String
  sender   Int
  receiver Int
  student  Student @relation(fields: [receiver], references: [id])
  vote     Vote[]

  @@id([name, receiver])
}

model Vote {
  name      String
  voter     Int
  votee     Int
  updatedAt DateTime @updatedAt
  nickname  Nickname @relation(fields: [name, votee], references: [name, receiver])
  student   Student  @relation(fields: [voter], references: [id])

  @@id([voter, votee])
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  sender    Int
  receiver  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [receiver], references: [id])
}

model Scientist {
  id      Int     @id
  student Student @relation(fields: [id], references: [id])
}
